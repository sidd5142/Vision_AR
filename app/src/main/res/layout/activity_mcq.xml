<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fbf2fc"
    tools:context=".MCQ">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/homelayout"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's do a Quizz !"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="50dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/q1"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        android:text="Question 1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:backgroundTint="#f7ba34"
        />

    <Button
        android:id="@+id/q2"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Question 2"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:backgroundTint="#477b72"
        />

    <Button
        android:id="@+id/q3"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Question 3"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:backgroundTint="#c4e4f4"
        />

    <Button
        android:id="@+id/q4"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Question 4"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:backgroundTint="#d8644b"
        />

</LinearLayout>